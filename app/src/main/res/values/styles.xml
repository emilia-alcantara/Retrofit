<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="my_toolbar_style">
        <item name="android:fontFamily">@font/farro_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/principal</item>
        <item name="android:elevation">15dp</item>

    </style>

    <style name="my_toolbar_text">
        <item name="android:fontFamily">@font/farro_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="cada_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/farro_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/principal</item>
        <item name="android:fontFamily">@font/farro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">23dp</item>

    </style>

</resources>